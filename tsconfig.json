{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "outDir": "functions/lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@*": ["functions/src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["functions/src"]
}
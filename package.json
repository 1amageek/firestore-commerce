    "node": "8"
  },
  "main": "functions/lib/index.js",
  "dependencies": {
    "@1amageek/ballcap-admin": "^0.5.3",
    "@1amageek/tradestore": "^0.2.4",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.3.0",
    "stripe": "^7.13.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/stripe": "^7.12.2",
    "firebase-functions-test": "^0.1.7",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "private": true
}
